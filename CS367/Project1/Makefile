#-----------------------------------------------------------------------------
# Makefile
#-----------------------------------------------------------------------------

#-----------------------------------------------------------------------------
# Choose a compiler and its options
#--------------------------------------------------------------------------
CC   = gcc -std=c99	# Use gcc for Zeus
OPTS = -Og -Wall -Werror -Wno-error=unused-variable -Wno-error=unused-function
DEBUG = -g		# -g for GDB debugging

#--------------------------------------------------------------------
# Build Files
#--------------------------------------------------------------------
SRCS=context.c srtf.c sys.c clock.c

#--------------------------------------------------------------------
# Compiler Options
#--------------------------------------------------------------------
CFLAGS   = $(OPTS) $(DEBUG)

#--------------------------------------------------------------------
# Build Recipies for the Executable (binary)
#--------------------------------------------------------------------
TARGET = scheduler

all: $(TARGET)

# Links the object files to create the target binary
$(TARGET): $(SRCS)
	${CC} ${CFLAGS} -o $@ $(SRCS)

#--------------------------------------------------------------------
# Cleans the objects
#--------------------------------------------------------------------
clean:
	rm -f $(TARGET)
